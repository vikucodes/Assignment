package Test_Scenerio;


import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;

import java.time.Duration;
import java.util.List;
import java.util.Set;

public class Test_Scenerio001_TestCase {
    public static void main(String[] args) {
        // Set path to chromedriver if needed
        // System.setProperty("webdriver.chrome.driver", "path/to/chromedriver");

        WebDriver driver = new ChromeDriver();
        try {
            driver.get("https://v0-button-to-open-v0-home-page-h5dizpkwp.vercel.app/");

            // Click the first button
            driver.findElement(By.xpath("/html/body/div/button")).click();

            // Wait for a new window to appear
            WebDriverWait wait = new WebDriverWait(driver, Duration.ofSeconds(10));
            wait.until(driver1 -> driver1.getWindowHandles().size() == 2);

            // Switch to the new window
            Set<String> allWindows = driver.getWindowHandles();
            String parentWindow = driver.getWindowHandle();
            String newWindow = allWindows.stream().filter(handle -> !handle.equals(parentWindow)).findFirst().get();
            driver.switchTo().window(newWindow);

            try {
                // Wait for Sign Up button to be visible
                WebElement signUpButton = new WebDriverWait(driver, Duration.ofSeconds(15))
                        .until(ExpectedConditions.visibilityOfElementLocated(
                                By.xpath("//button[contains(translate(text(),'ABCDEFGHIJKLMNOPQRSTUVWXYZ','abcdefghijklmnopqrstuvwxyz'),'sign up')]")
                        ));

                if (signUpButton.isDisplayed()) {
                    System.out.println("Sign Up button is visible.");
                }
            } catch (Exception e) {
                // Take screenshot if Sign Up button not found
                java.io.File screenshot = ((org.openqa.selenium.TakesScreenshot) driver).getScreenshotAs(org.openqa.selenium.OutputType.FILE);
                java.nio.file.Path destination = java.nio.file.Paths.get("Screenshots/signup.png");
                java.nio.file.Files.createDirectories(destination.getParent());
                java.nio.file.Files.copy(screenshot.toPath(), destination);
                System.out.println("Sign Up button not found: " + e.getMessage());
            }

        } catch (Exception e) {
            e.printStackTrace();
        } finally {
            driver.quit();
        }
    }
}
